{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "out",

        // enable top-level await and import/export syntax
        "target": "es2017",
        "moduleResolution": "node16",
        "allowSyntheticDefaultImports": true,
        "module": "node16",

        // enable type checking
        "strict": true,

        // to make jest happy
        "esModuleInterop": true
    }
}
